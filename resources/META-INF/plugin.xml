<idea-plugin version="2">
  <id>defrac.intellij</id>
  <name>defrac IntelliJ IDEA Plug-In</name>
  <version>1.0</version>
  <vendor email="team@defrac.com" url="https://www.defrac.com">defrac inc.</vendor>

  <description>
    <![CDATA[Build multi-platform apps with defrac inside IntelliJ IDEA]]>
  </description>

  <change-notes>
    <![CDATA[<ol>
      <li>2014-11-10 - Start of IntelliJ IDEA plugin development</li>
    </ol>]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <extensions defaultExtensionNs="com.intellij">
    <configurationType implementation="defrac.intellij.run.DefracConfigurationType"/>
    <facetType implementation="defrac.intellij.facet.DefracFacetType"/>
    <gotoDeclarationHandler implementation="defrac.intellij.DefracGotoMacroDeclarationHandler"/>
    <gotoDeclarationHandler implementation="defrac.intellij.DefracGotoDelegateDeclarationHandler"/>
    <methodReferencesSearch implementation="defrac.intellij.findUsages.DefracMacroMethodReferencesSearch"/>
    <projectViewPane implementation="defrac.intellij.projectView.DefracProjectViewPane"/>
    <psi.referenceContributor implementation="defrac.intellij.psi.DefracReferenceContributor"/>
    <referencesSearch implementation="defrac.intellij.findUsages.DefracDelegateClassReferencesSearch"/>
    <referencesSearch implementation="defrac.intellij.findUsages.DefracMacroClassReferencesSearch"/>
    <sdkType implementation="defrac.intellij.sdk.DefracSdkType"/>
  </extensions>

  <application-components/>
  <project-components/>
  <actions/>
  <module-components/>
</idea-plugin>
